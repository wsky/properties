@{
    var url = Request.Url.ToString().ToLower();
    var active = 0;
    active = url.IndexOf("/configuration") >= 0 ? 1 : active;
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Properties</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="app properties">
    <meta name="author" content="wsky">

    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="@Url.Content("~/Content/icon-144.png")">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@Url.Content("~/Content/icon-114.png")">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="@Url.Content("~/Content/images/icon-72.png")">
    <link rel="apple-touch-icon-precomposed" href="@Url.Content("~/Content/images/icon.png")">

    @RenderSection("Head", false)
</head>
<body data-spy="scroll" data-target=".subnav" data-offset="60">
    
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">Properties</a>
                <div class="btn-group pull-right">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="icon-user"></i> @User.Identity.Name
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="#">Profile</a></li>
                    <li class="divider"></li>
                    <li><a href="@Url.Action("SignOut", "Account", null)">Sign Out</a></li>
                </ul>
                </div>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li><a href="@Url.Content("~/Application")">Application</a></li>
                        <li>@Html.ActionLink("Configuration", "", "Configuration", null, null)</li>
                        <li><a href="http://support.app-properties.net/pricing">Pricing</a></li>
                        <li><a href="http://support.app-properties.net" target="_blank">Support</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
        <hr>
        <footer>
            <p>&copy; Properties 2012</p>
        </footer>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    @RenderSection("Bottom", false)
    <script type="text/javascript">
        $(function () {
            $('div.nav-collapse .nav li:eq(@active)').addClass('active');
        });
    </script>
</body>
</html>
